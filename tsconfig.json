{
  "compilerOptions": {
    "target": "esnext",                       
    "module": "commonjs",                     
    "lib": ["es6"],                           
    "allowJs": true,                          
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react-native",

    "isolatedModules": true,                  
    "noEmit": true,
    "strict": true,                           
    "moduleResolution": "node",               
    "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
